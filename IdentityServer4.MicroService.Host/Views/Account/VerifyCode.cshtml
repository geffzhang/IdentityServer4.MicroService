@model VerifyCodeViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Verify";
}
<style>
    .form-label-group {
        position: relative;
        margin-bottom: 1rem;
    }
</style>

<div class="container" style="margin-top:3em;">
    <div class="row">
        <div class="col-2"></div>
        <div class="col">
            <form asp-controller="Account" asp-action="VerifyCode" asp-route-returnurl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All"></div>
                <input asp-for="Provider" type="hidden" />
                <input asp-for="RememberMe" type="hidden" />
                <div class="text-center mb-4">
                    <h5 class="h3 mb-3 font-weight-normal">@ViewData["Status"]</h5>
                </div>
                <div class="form-label-group">
                    <input type="text" name="Code" id="Code" class="form-control" placeholder="@Localizer["验证码"]" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberBrowser" />
                        <label>@Localizer["RememberBrowser"]</label>
                    </div>

                </div>

                <button class="btn btn-lg btn-primary btn-block" type="submit">@Localizer["提交"]</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>