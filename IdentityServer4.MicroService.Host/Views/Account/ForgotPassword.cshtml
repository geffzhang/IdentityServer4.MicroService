@model ForgotPasswordViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["忘记密码"];
}
<style>
    .form-label-group {
        position: relative;
        margin-bottom: 1rem;
    }
</style>
<div class="container" style="margin-top:3em;">
    <div class="row">
        <div class="col-2"></div>
        <div class="col">
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="ui form">
                <div asp-validation-summary="All"></div>
                <div class="text-center mb-4">
                    <h5 class="h3 mb-3 font-weight-normal">@Localizer["请输入您的邮箱地址"]</h5>
                </div>

                <div class="form-label-group">
                    <input type="email" name="Email" id="Email" class="form-control" placeholder="@Localizer["邮箱"]" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button class="btn btn-lg btn-success btn-block" type="submit">@Localizer["提交"]</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>