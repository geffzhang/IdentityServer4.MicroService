@model ResetPasswordViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Reset password";
}
<div class="container" style="margin-top:3em;">
    <div class="row">
        <div class="col-2"></div>
        <div class="col">
            <form asp-controller="Account" asp-action="ResetPassword" method="post" class="ui form">
                <div asp-validation-summary="All"></div>
                <input asp-for="Code" type="hidden" />
                <div class="text-center mb-4">
                    <h5 class="h3 mb-3 font-weight-normal">@ViewData["Title"]</h5>
                    <p>Unsuccessful login with service.</p>
                </div>

                <div class="form-label-group">
                    <input type="email" name="Email" id="Email" class="form-control" placeholder="@Localizer["邮箱"]" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-label-group">
                    <input type="password" name="Password" id="Password" class="form-control" placeholder="@Localizer["密码"]" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-label-group">
                    <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" placeholder="@Localizer["确认密码"]" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            
                <button class="btn btn-lg btn-success btn-block" type="submit">@Localizer["提交"]</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>